<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] JJOO</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/logo.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <header>
        <nav class="main-nav">
            <ul class="ul__nav">
                <a href='@Url.Action("Index", "Home")'><img src="~/img/logo.png" alt="Logo"></a>
                <li class="item"><a href='@Url.Action("Historia", "Home")'>Historia</a></li>
                <li class="item"><a href='@Url.Action("Deportes", "Home")'>Deportes</a></li>
                <li class="item"><a href='@Url.Action("Paises", "Home")'>Países</a></li>
                <li class="item"><a href='@Url.Action("AgregarDeportista", "Home")'>Agregar deportista</a></li>
                <li class="item"><a href='@Url.Action("Creditos", "Home")'>Créditos</a></li>
            </ul>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </main>

    <footer>
        &copy; @DateTime.Now.Year - JJOO
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
