@{
    ViewData["Title"] = "Deportes";
}
<div class="main">
    <h1>Deportes:</h1>
    <div class="container text-center">
        <div class="row">
            @foreach(Deporte deporte in ViewBag.ListaDeportes){
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <img src="@deporte.Foto" class="card-img-top" alt="Imagen-Deporte">
                        <div class="card-body">
                            <h5 class="card-title">@deporte.Nombre</h5>
                            <a href='@Url.Action("VerDetalleDeporte", "Home", new{idDeporte = deporte.IdDeporte})' class="btn btn-primary">Ver Deporte</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
