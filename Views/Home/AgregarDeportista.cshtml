@{
    ViewData["Title"] = "Agregar Deportista";
}
<div class="header-pages">
    <div class="header-overlay"></div>
</div>
<div class="main">
<h1>Agregar Deportista:</h1>
    <form action='@Url.Action("ProcesarForm", "Home")' method="post">
        <fieldset>
            <legend>INFORMACIÓN BASICA</legend>
            <label>Apellido:
                <input type="text" name="Apellido" required minlength="3" placeholder="Apellidos">
            </label>
            <label>Nombre:
                <input type="text" name="Nombre" required minlength="3" placeholder="Nombres">
            </label>
            <label>Fecha de Nacimiento:
                <input type="date" name="FechaNacimiento" required>
            </label>
            <label>Foto:
                <input type="text" name="Foto" placeholder="URL" required>
            </label>
        </fieldset>
        <fieldset>
            <legend>Comites a los que pertenece:</legend>
            <label>País:
                <select name="IdPais" required>
                    @foreach(Pais pais in ViewBag.ListaPaises){
                        <option value="@pais.IdPais">@pais.Nombre</option>
                    }
                </select>
            </label>
            <label>Deporte:
                <select name="IdDeporte" required>
                    @foreach(Deporte deporte in ViewBag.ListaDeportes){
                        <option value="@deporte.IdDeporte">@deporte.Nombre</option>
                    }
                </select>
            </label>
        </fieldset>
        <button type="submit" name="accion" value="Agregar" class="btn btn-outline-info">Agregar Deportista</button>
        <button type="submit" name="accion" value="Eliminar" class="btn btn-outline-danger">Eliminar Deportista</button>
    </form>
</div>