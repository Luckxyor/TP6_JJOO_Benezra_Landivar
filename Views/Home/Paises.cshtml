@{
    ViewData["Title"] = "Paises";
}
<div class="main">
    <h1>Países:</h1>
    <div class="container text-center">
        <div class="row">
            @foreach(Pais pais in ViewBag.ListaPaises){
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <img src="@pais.Bandera" class="card-img-top" alt="Imagen-Deporte">
                        <div class="card-body">
                            <h5 class="card-title">@pais.Nombre</h5>
                            <a href='@Url.Action("VerDetallePais", "Home", new{idPais = pais.IdPais})' class="btn btn-primary">Ver País</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>